<VirtualHost *:80>
    ServerAdmin robert.boczek@gmail.com

<Proxy balancer://cluster>
    BalancerMember ajp://localhost:8009/ route=jvm1
    BalancerMember ajp://localhost:9009/ route=jvm2
    ProxySet stickysession=JSESSIONID
</Proxy>
ProxyPass /balancer-manager !
ProxyPass / balancer://cluster/whereismymobile/ stickysession=JSESSIONID|jsessionid failonstatus=503
ProxyPassReverse / http://whereismymobile.com/whereismymobile/
ProxyPassReverseCookiePath / http://whereismymobile.com/whereismymobile/

ProxyRequests off
<Proxy *>
        Order deny,allow
        Allow from all
</Proxy>

<Location /balancer-manager>
        SetHandler balancer-manager

        Order Deny,Allow
        Deny from all
        Allow from 127.0.0.0/255.0.0.0 ::1/128
</Location>	

</VirtualHost>
